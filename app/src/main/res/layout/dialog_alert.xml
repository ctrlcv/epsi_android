<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/nexon_bold"
        android:gravity="center"
        android:lineSpacingExtra="1.6dp"
        android:text="알림"
        android:textColor="#840a47"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dlg_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/nexon_regular"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="NFC 미지원 단말입니다." />

    <LinearLayout
        android:id="@+id/layout_pop_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:fontFamily="@font/nexon_bold"
            android:background="#840a47"
            android:textColor="#f2ab24"
            android:lineSpacingExtra="6.6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>