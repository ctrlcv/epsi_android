<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_password_input_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/nexon_bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="알림"
        android:textStyle="bold"
        android:background="#99840a47"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_dlg_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="30dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/nexon_regular"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="NFC 미지원 단말입니다." />

    <LinearLayout
        android:id="@+id/layout_pop_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/nexon_bold"
            android:textSize="20dp"
            android:background="#C4C4C4"
            android:gravity="center"
            android:text="확인"
            android:textColor="#5d5d5d"
            tools:ignore="HardcodedText"/>
    </LinearLayout>
</LinearLayout>