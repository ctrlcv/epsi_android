<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#840a47"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="23dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/nexon_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6.6dp"
                android:text="스마트 관로\n시설정보 시스템"
                android:textColor="#ffffff"
                android:textSize="23dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_menu_close_imagebutton"
            android:layout_marginTop="10.7dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_outline_close_24" />
    </RelativeLayout>
</LinearLayout>
