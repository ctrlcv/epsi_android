                    android:id="@+id/tv_distance_lr"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="이격거리\n좌우"/>

                <RelativeLayout
                    android:id="@+id/item_distance_lr"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_distance_lr"
                    android:background="@drawable/border_ffffff_840a47_3dp">
                    <EditText
                        android:id="@+id/et_distance_lr"
                        android:fontFamily="@font/nexon_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:textColorHint="#840a47"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:layout_toLeftOf="@id/et_distance_lr_add"
                        android:gravity="center_vertical|start"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/et_distance_lr_add"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/nexon_bold"
                        android:textSize="16dp"
                        android:textColor="#840a47"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:text="m" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_depth"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="매설심도"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_depth"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <EditText
                        android:id="@+id/et_depth"
                        android:fontFamily="@font/nexon_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:textColorHint="#840a47"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:layout_toLeftOf="@id/et_depth_add"
                        android:gravity="center_vertical|start"
                        android:background="@null" />
                    <TextView
                        android:id="@+id/et_depth_add"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/nexon_bold"
                        android:textSize="16dp"
                        android:textColor="#840a47"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:text="m" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_diameter"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="관    경"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_diameter"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <EditText
                        android:id="@+id/et_diameter"
                        android:fontFamily="@font/nexon_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:textColorHint="#840a47"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:layout_toLeftOf="@id/et_diameter_add"
                        android:gravity="center_vertical|start"
                        android:background="@null" />
                    <TextView
                        android:id="@+id/et_diameter_add"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/nexon_bold"
                        android:textSize="16dp"
                        android:textColor="#840a47"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:text="mm" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_material"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="관로재질"/>

                <RelativeLayout
                    android:id="@+id/item_material"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_material"
                    android:layout_toEndOf="@id/tv_material"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <TextView
                        android:id="@+id/et_material"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/nexon_regular"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:layout_toLeftOf="@id/et_material_add"
                        android:layout_toStartOf="@id/et_material_add"
                        android:gravity="center_vertical|start"
                        tools:ignore="HardcodedText"/>
                    <ImageView
                        android:id="@+id/et_material_add"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_down_840a47" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_location"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="매설위치"
                    tools:ignore="HardcodedText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_location"
                    android:layout_toEndOf="@id/tv_location"
                    android:layout_toLeftOf="@id/location_btn"
                    android:layout_toStartOf="@id/location_btn"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight= "1"
                        android:layout_marginRight="3dp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/border_ffffff_840a47_3dp">
                        <EditText
                            android:id="@+id/et_position_x"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/nexon_regular"
                            android:textSize="14dp"
                            android:textColor="#840a47"
                            android:digits="0123456789."
                            android:inputType="numberDecimal"
                            android:layout_toLeftOf="@id/et_position_y"
                            android:layout_toStartOf="@id/et_position_y"
                            android:gravity="center_vertical|start"
                            android:background="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight= "1"
                        android:layout_marginLeft="3dp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/border_ffffff_840a47_3dp">
                        <EditText
                            android:id="@+id/et_position_y"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/nexon_regular"
                            android:textSize="14dp"
                            android:textColor="#840a47"
                            android:digits="0123456789."
                            android:inputType="numberDecimal"
                            android:layout_toRightOf="@id/et_position_x"
                            android:layout_toEndOf="@id/et_position_x"
                            android:gravity="center_vertical|start"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
