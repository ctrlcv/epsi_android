                    android:enabled="false"
                    android:background="@drawable/border_ffffff_840a47_3dp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_pipe_group"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="관로종류"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/item_pipe_group"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_pipe_group"
                    android:layout_toEndOf="@id/tv_pipe_group"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <TextView
