                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_arrow_down_840a47"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_pipe_type"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="관로형태"/>

                <RelativeLayout
                    android:id="@+id/item_pipe_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_pipe_type"
                    android:layout_toEndOf="@id/tv_pipe_type"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <TextView
                        android:id="@+id/et_pipe_type"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/nexon_regular"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:layout_toLeftOf="@id/et_pipe_type_add"
                        android:layout_toStartOf="@id/et_pipe_type_add"
                        android:gravity="center_vertical|start"
                        android:text=""
                        tools:ignore="HardcodedText"/>
                    <ImageView
                        android:id="@+id/et_pipe_type_add"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_down_840a47" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_set_position"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="설치위치"/>

                <RelativeLayout
                    android:id="@+id/item_set_position"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_set_position"
                    android:layout_toEndOf="@id/tv_set_position"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <TextView
                        android:id="@+id/et_set_position"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/nexon_regular"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:layout_toLeftOf="@id/et_set_position_add"
                        android:layout_toStartOf="@id/et_set_position_add"
                        android:gravity="center_vertical|start"
                        android:text=""
                        tools:ignore="HardcodedText"/>
                    <ImageView
                        android:id="@+id/et_set_position_add"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_down_840a47" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_distance_direction"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="이격위치"/>

                <RelativeLayout
                    android:id="@+id/item_distance_direction"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="7dp"
                    android:paddingEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_distance_direction"
                    android:layout_toEndOf="@id/tv_distance_direction"
                    android:background="@drawable/border_ffffff_840a47_3dp">

                    <TextView
                        android:id="@+id/et_distance_direction"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/nexon_regular"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:layout_toLeftOf="@id/et_distance_direction_add"
                        android:layout_toStartOf="@id/et_distance_direction_add"
                        android:gravity="center_vertical|start"
                        android:text=""
                        tools:ignore="HardcodedText"/>
                    <ImageView
                        android:id="@+id/et_distance_direction_add"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_down_840a47" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_distance"
                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="이격거리\n정면"/>

                <RelativeLayout
                    android:id="@+id/item_distance"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginLeft="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_distance"
                    android:background="@drawable/border_ffffff_840a47_3dp">
                    <EditText
                        android:id="@+id/et_distance"
                        android:fontFamily="@font/nexon_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:textColorHint="#840a47"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:layout_toLeftOf="@id/et_distance_add"
                        android:gravity="center_vertical|start"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/et_distance_add"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/nexon_bold"
                        android:textSize="16dp"
                        android:textColor="#840a47"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:text="m" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">
