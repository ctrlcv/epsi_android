                        android:layout_height="30dp"
                        android:fontFamily="@font/nexon_regular"
                        android:textSize="14dp"
                        android:textColor="#840a47"
                        android:layout_toLeftOf="@id/et_pipe_group_add"
                        android:layout_toStartOf="@id/et_pipe_group_add"
                        android:gravity="center_vertical|start"
                        android:text=""
                        android:enabled="false"
                        tools:ignore="HardcodedText"/>
                    <ImageView
                        android:id="@+id/et_pipe_group_add"
                        android:layout_width="24dp"
