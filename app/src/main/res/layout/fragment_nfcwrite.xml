                    android:fontFamily="@font/nexon_bold"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="관리기관"
