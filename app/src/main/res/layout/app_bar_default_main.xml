<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ccc4ba"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DefaultMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4">

        <RelativeLayout
            android:id="@+id/top_bar_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#840a47"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/btn_main_menu_linear_layout"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_outline_menu_24" />

            <TextView
                android:id="@+id/activity_title"
                android:fontFamily="@font/nexon_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:lineSpacingExtra="2.6dp"
                android:gravity="center_vertical|start"
                android:layout_toRightOf="@id/btn_main_menu_linear_layout"
                android:text="지도보기"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home" />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/content_default_main" />

</LinearLayout>
