<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#efe8df">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <com.naver.maps.map.MapView
                android:id="@+id/naver_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_address_search"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_ffffff_840a47_3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_home_24"/>
        <TextView
            android:fontFamily="@font/nexon_bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="#840a47"
            android:textSize="18dp"
            android:lineSpacingExtra="2.6dp"
            android:text="주소검색"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_address_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:orientation="vertical"
        android:background="@drawable/border_ffffff_840a47_3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_ffffff_840a47_3dp"
            android:layout_gravity="center_vertical">
            <EditText
                android:id="@+id/et_search"
                android:fontFamily="@font/nexon_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:textColor="#840a47"
                android:textColorHint="#a8a8a8"
                android:hint="검색할 주소를 입력하세요"
                android:gravity="center_vertical|start"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/btn_search"
                android:layout_toLeftOf="@id/btn_search"
                android:background="@null" />
            <TextView
                android:id="@+id/btn_search"
                android:fontFamily="@font/nexon_regular"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_840a47_840a47_3dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:lineSpacingExtra="2.6dp"
                android:text="검색"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/no_search_result"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:visibility="gone">
            <TextView
                android:fontFamily="@font/nexon_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textColor="#818181"
                android:textSize="17dp"
                android:lineSpacingExtra="2.6dp"
                android:text="검색결과가 없습니다"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/address_search_rv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:orientation="vertical"
        android:background="@drawable/border_ffffff_ffffff_3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_840a47_840a47_top3dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:lineSpacingExtra="2.6dp"
            android:text="상수관"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="시리얼넘버"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="관로형태"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="설치위치"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_distance_direction_title"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="이격위치"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_distance_title"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="이격거리"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="관경"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="매설심도"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="#840a47"
                    android:gravity="center_vertical|right"
                    android:text="관로재질"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_serialnumber"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="T분기형(90)"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_type"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="T분기형(90)"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_set_position"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="경계석"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_distance_direction"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="CENTER"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_distance"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="전 2.34m   좌 4.34m"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_diameter"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="3.23m"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_depth"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="3.21m"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/tv_pipe_material"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nexon_regular"
                    android:paddingLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="#5d5d5d"
                    android:gravity="center_vertical|left"
                    android:text="폴리에틸렌"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingTop="0dp"
            android:paddingBottom="15dp">
            <LinearLayout
                android:id="@+id/view_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_ffffff_840a47_width3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nexon_bold"
                    android:paddingRight="10dp"
                    android:textSize="20dp"
                    android:textColor="#840a47"
                    android:gravity="center"
                    android:text="세부정보"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>